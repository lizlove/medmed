
<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h3 id="container">Contact Information</h3>
    </div>
    <div class="contact-info">
      <p>
      <h3>Name:</h3>
      <%= @patient.name %>
      </p>

      <p>
      <h3>Email:</h3>
      <%= @patient.email %>
      </p>

      <p>
      <h3>Phone Number:</h3>
      <%= @patient.phone_number %>
      </p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h3 id="container">Doctors</h3>
    </div>
    <div class="doctor-info">
      <div class="list-group">
        <% @patient.doctors.each do |doctor| %>
            <a href="#" class="list-group-item">
              <h4 class="list-group-item-heading">Dr. <%= doctor.name %></h4>
              <p class="list-group-item-text">Donec id elit non mi porta gravida at eget metus. Maecenas sed diam eget risus varius blandit.</p>
            </a>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h3 id="container">Prescriptions</h3>
    </div>
  </div>

  <div class="prescription-info">
    <table class="table table-striped table-hover ">
      <thead>
      <tr>
        <th>Prescription</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Prescribing Doctor</th>
        <th>Compliance</th>
      </tr>
      </thead>
      <tbody>
      <% @patient.prescriptions.each do |prescription| %>
          <tr>
            <td><%= prescription.medication_name %></td>
            <td><%= prescription.start_datetime.to_date %></td>
            <td><%= prescription.end_datetime.to_date %></td>
            <td><%= prescription.doctor.name %></td>
            <td><%= prescription.scheduled_doses.where(was_taken: true).length %>/<%= prescription.scheduled_doses.where(scheduled_time: (100.years.ago)..(Time.now)).length %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>




