<% if @doctor %>
<p id="notice"><%= notice %></p>
<h2>Hello Dr. <%= @doctor.last_name %></h2>
<br><br>
<div class="page-header">
  <div class="row">
    <%= button_to "Add your patient", new_doctor_patient_path, {method: :get, class: "btn btn-primary", style: "float: left"} %>
    <%= button_to "Prescribe Medication", new_doctor_prescription_path, {method: :get, class: "btn btn-primary", style: "float: none"} %>
  </div>
</div>
<br><br>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Patient Name</th>
      <th>Prescription</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Compliance</th>
      <th>Delete?</th>
    </tr>
  </thead>
  <tbody>
    <% @doctor.patients.order(:last_name).each do |patient| %>
      <% patient.prescriptions.each do |prescription| %>
        <tr>
          <td><%= link_to patient.name, doctor_patient_path(@doctor, patient) %></td>
          <td><%= prescription.medication_name %></td>
          <td><%= prescription.start_datetime.to_date %></td>
          <td><%= prescription.end_datetime.to_date %></td>
          <td><%= prescription.scheduled_doses.where(was_taken: true).length %>/<%= prescription.scheduled_doses.where(scheduled_time: (100.years.ago)..(Time.now)).length %></td>
          <td><%= link_to('X', doctor_prescription_path(id: prescription.id), method: "DELETE") %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<% else %>
<h4>You're not signed in!</h4>
<% end %>