    <%= f.label :medication %><br>
    <%= f.text_field :medication_name %><br>
  </div>

  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.datetime_select :start_datetime, :ampm => true %><br>
  </div>

  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.datetime_select :end_datetime, :ampm => true %><br>
  </div>

  <div class="actions">
    <%= f.submit "Prescribe" %>
  </div>
<% end %>