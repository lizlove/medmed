<div class="panel panel-<%= sd.panel_class %>" id="sd-<%= sd.id %>">
  <div class="panel-heading">
    <div class="row">
      <div class="col-lg-6">
        <%= link_to("sd.prescription.medication_name", )%>
        <!-- put linkto here for the prescription show page -->
      </div>
      <div class="col-lg-6">
        <div class="checkbox">
          <label for="">
            <%= form_for(sd, remote: true) do |f| %>
                <%= f.hidden_field :prescription_id, value: sd.prescription.id %>
                <%= f.check_box :was_taken %>
            <% end %>
            Taken
          </label>

        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-6">
        <img src="<%= sd.prescription.image_url %>" alt="pills">
        <%= sd.scheduled_time %>
      </div>
      <div class="col-lg-6">
        <%= form_for(sd, remote: true) do |f| %>
            <%= f.hidden_field :prescription_id, value: sd.prescription.id %>
            <%= f.text_area :side_effect, class: "form-control", rows: "3" %>
            <br/>
            <%= f.submit "Record Side Effects", class: "btn btn-default"   %>
        <% end %>
        <!--<form action="">-->
          <!--<textarea class="form-control" rows="3" id="textArea">Side Effects</textarea>-->
          <!--<br/>-->
          <!--<a href="#" class="btn btn-default">Record Side Effects</a>-->
        <!--</form>-->
      </div>
    </div>
  </div>
</div>